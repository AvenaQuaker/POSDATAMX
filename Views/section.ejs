<!DOCTYPE html>
<html class="scroll-smooth" lang="<%= lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Section1</title>
    <link rel="stylesheet" href="/css/seccionTW.css">
</head>
<body class="antialiased text-gray-800 font-Montserrat">
    <header>
	<nav id="mainNav" 
		class="bg-[#202020ff] fixed top-0 left-0 w-full bg-eblack py-3 px-4 shadow-md transition-all duration-500 -translate-y-full opacity-0 z-30">
		<div class="flex justify-between items-center mx-6 lg:mx-40">
		<div class="flex items-center space-x-4">
            <a href="/"><img src="/images/LogoBlanco.png" alt="150x50" class="h-10 hover:scale-105 transition cursor-pointer"></a>
            <div class="bg-gray-100 h-8 w-[1px]"></div>
            <p class="uppercase font-fredoka font-bold text-stone-50"><%= translations.nav.titulo %></p>
        </div>
		<!-- Opciones en pantallas grandes -->
        <div class="hidden md:flex space-x-6">
            <a href="/Servicios/<%= lang %>/fotografia" 
            class="text-gray-300 cursor-pointer hover:scale-110 transition font-semibold text-[1rem]">
            <%= translations.nav.fotografia %>
            </a>

            <a href="/Servicios/<%= lang %>/diseno" 
            class="text-gray-300 cursor-pointer hover:scale-110 transition font-semibold text-[1rem]">
            <%= translations.nav.diseno %>
            </a>

            <a href="/Servicios/<%= lang %>/multimedia" 
            class="text-gray-300 cursor-pointer hover:scale-110 transition font-semibold text-[1rem]">
            <%= translations.nav.multimedia %>
            </a>

            <a href="/Servicios/<%= lang %>/web" 
            class="text-gray-300 cursor-pointer hover:scale-110 transition font-semibold text-[1rem]">
            <%= translations.nav.web %>
            </a>

            <a href="/Servicios/<%= lang %>/marketing" 
            class="text-gray-300 cursor-pointer hover:scale-110 transition font-semibold text-[1rem]">
            <%= translations.nav.marketing %>
            </a>
        </div>
		<button id="menuBtn" class="md:hidden text-gray-300 focus:outline-none">
			<!-- ícono hamburguesa -->
			<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
			</svg>
		</button>
		</div>
	</nav>
	<!-- Menú lateral (off-canvas) -->
	<div id="sideMenu" 
		class="fixed top-0 right-0 w-64 h-full bg-gray-800 shadow-lg transform translate-x-full transition-transform duration-300 z-50">
		<div class="flex justify-between items-center p-4 border-b">
		<span class="font-bold text-gray-300"><%= translations.nav.menu %></span>
		<!-- Botón cerrar -->
		<button id="closeMenu" class="text-gray-700">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
			</svg>
		</button>
		</div>
		<div class="flex flex-col p-6 space-y-4">
            <a href="/Servicios/<%= lang %>/fotografia" class="text-gray-300 hover:underline font-semibold">
                <%= translations.nav.fotografia %>
            </a>
            <a href="/Servicios/<%= lang %>/diseno" class="text-gray-300 hover:underline font-semibold">
                <%= translations.nav.diseno %>
            </a>
            <a href="/Servicios/<%= lang %>/multimedia" class="text-gray-300 hover:underline font-semibold">
                <%= translations.nav.multimedia %>
            </a>
            <a href="/Servicios/<%= lang %>/web" class="text-gray-300 hover:underline font-semibold">
                <%= translations.nav.web %>
            </a>
            <a href="/Servicios/<%= lang %>/marketing" class="text-gray-300 hover:underline font-semibold">
                <%= translations.nav.marketing %>
            </a>
        </div>
	</div>
    </header>

    <!-- HERO / BANNER PRINCIPAL -->
    <section class="h-[36rem] relative bg-fixed bg-cover bg-center" style="background-image:url('<%= translations.sec.fondo %>')">
        <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-black/10 to-transparent"></div></div>
    </section>

    <!-- ABOUT / SERVICIOS PRINCIPALES -->
    <section class="py-16 antiwhite mx-auto">
    <div class="max-w-6xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        
        <!-- Texto -->
        <div>
        <h2 class="text-3xl font-extrabold text-slate-800 mb-3 font-Fredoka"><%= translations.sec.titulo %></h2>
        <div class="w-40 h-1 bg-red-800 mb-6"></div>

        <p class="text-slate-700 mb-4">
            <%= translations.sec.descripcion %>
        </p>

        <ul class="list-disc pl-5 space-y-2 text-slate-700 mb-6">
            <% translations.sec.lista.forEach(function(item) { %>
                <li><%= item %></li>
            <% }); %>
        </ul>
        <button class="mt-4">
            <a href="#contacto" 
                class="bg-red-800 text-white px-6 py-3 rounded shadow hover:bg-red-900 transition font-semibold">
                <%= translations.sec.boton %>
            </a>
        </button>
        </div>

        <div class="grid grid-rows-2 gap-4">
        <% translations.sec.fotos.forEach(function(foto) { %>
            <div class="relative">
                <img src="<%= foto %>" 
                    alt="Servicio de Fotografía" 
                    class="w-full h-60 object-cover rounded-lg shadow-lg transform rotate-2 hover:rotate-0 transition">
            </div>
        <% }); %>
        </div>
    </div>
    </section>



    <!-- SEPARADOR / BANNER -->
    <section class="relative py-16 bg-fixed bg-center bg-cover" 
            style="background-image: url('/images/BlackBG.jpg');">
    <div class="absolute inset-0 bg-black/30"></div>

    <div class="relative z-10 max-w-4xl mx-auto text-center px-6">
        <h3 class="text-2xl md:text-3xl font-bold font-fredoka uppercase tracking-wide text-white">
        <%= translations.sec.banner.titulo %>
        </h3>
        <p class="text-slate-200 text-lg">
        <%= translations.sec.banner.descripcion %>
        </p>
    </div>
    </section>


    <!-- MAPA DE SITIO / FOOTER -->
    <footer class="bg-[#202020ff] text-slate-200">
        <div class="w-[60%] box-content mx-auto px-6 py-12 grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
            <img src="/images/LogoBlanco.png" alt="logo" class="mb-4 h-28">
            <div class="flex gap-3">
            <a href="https://www.facebook.com/psdatamx" class="w-9 h-9 bg-slate-700 rounded flex items-center justify-center hover:bg-blue-500 transition">
                <img class="invert w-5 h-5" src="/images/Facebook.svg"></img>
            </a>
            <a href="https://www.instagram.com/psdatamx/" class="w-9 h-9 bg-slate-700 rounded flex items-center justify-center hover:bg-pink-500 transition">
                <img class="invert w-5 h-5" src="/images/Instagram.svg"></img>
            </a>
            <a href="https://www.youtube.com/channel/UC3vqV7WOo7YpzzKXJIBrZMA" class="w-9 h-9 bg-slate-700 rounded flex items-center justify-center hover:bg-red-600 transition">
                <img class="invert w-5 h-5" src="/images/Youtube.svg"></img>
            </a>
            <a href="https://www.linkedin.com/company/posdata-mx/" class="w-9 h-9 bg-slate-700 rounded flex items-center justify-center hover:bg-blue-400 transition">
                <img class="invert w-5 h-5" src="/images/Linkedin.svg"></img>
            </a>
            </div>
        </div>

        <!-- Inicio -->
        <div>
            <h4 class="font-semibold text-white mb-4 uppercase"><%= translations.footer.principal %></h4>
            <ul class="space-y-3 text-slate-300">
            <% translations.footer.links.forEach(function(item) { %>
                <li><a href="#" class="hover:text-white"><%= item %></a></li>
            <% }); %>
            </ul>
        </div>
        <!-- Servicios -->
        <div>
            <h4 class="font-semibold text-white mb-4 uppercase"><%= translations.footer.servicios %></h4>
            <ul class="space-y-3 text-slate-300">
            <% translations.footer.servicios_links.forEach(function(item) { %>
                <li><a href="#" class="hover:text-white"><%= item %></a></li>
            <% }); %>
            </ul>
        </div>

        <!-- contacto breve -->
        <div>
            <h4 class="font-semibold text-white mb-4">CONTACTO</h4>
            <p class="text-slate-300">Hotel Real Inn, Salón Hamburgo, Av. Reforma 5430, Nuevo Laredo, Tam.</p>
            <p class="text-slate-300 mt-4">email: info@posdatamx.com</p>
            <p class="text-slate-300">tel: +52 867 123 4567</p>
        </div>
        </div>

        <div class="bg-black border-t border-slate-800 text-center py-4 text-sm text-slate-200">
        2025 © POSDATAMX — Todos los derechos reservados
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>